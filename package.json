{
	"name": "gemini-simple-history-access",
	"description": "Simple extension that provides access to Gemini's history via arrow keys.",
	"version": "0.1.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt --browser firefox",
		"build": "wxt build",
		"build:firefox": "wxt build --browser firefox",
