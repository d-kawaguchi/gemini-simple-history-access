		"zip:firefox": "wxt zip --browser firefox",
		"postinstall": "wxt prepare"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"lefthook": "^1.6.12",
		"typescript": "^5.2.2",
		"wxt": "^0.18.3"
	}
